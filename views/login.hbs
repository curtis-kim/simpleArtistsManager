<div class="login-page">
    <h2>Login Form</h2>

    <form action="/home" method="post">

        {{#if userImage}}

        <div class="imgcontainer">
            <img src="/img/userImage.png" alt="Avatar" class="avatar">
        </div>
        {{/if}}
        <div class="container">
            <label for="uname"><b>Username</b></label>
            <input class="login-input" type="text" placeholder="Enter Username" name="uname" required>

            <label for="psw"><b>Password</b></label>
            <input class="login-input" type="password" placeholder="Enter Password" name="psw" required>

            <button type="submit" class="login-button">
                <h1>Login</h1>
            </button>
        </div>
    </form>
    <div>
        <form action="/home" method="get">
            <button type="submit" class="login-button">
                <h1>Skip Login</h1>
            </button>
        </form>
    </div>
    {{#if loginFailed}}
    <p>LOGIN FAILED TRY AGAIN</p>
    {{/if}}
</div>

{{>footer}}